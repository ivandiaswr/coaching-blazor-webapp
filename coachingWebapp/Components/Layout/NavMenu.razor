                        </li>
                    </NotAuthorized>
                    <Authorized>
                        @if (isHomePage)
                        {
                            @if (isAdmin)
                            {
                                <li class="auth-item">
                                    <NavLink class="nav-li account-btn" href="/AdminDashboard">
                                        <i class="fa-solid fa-gauge"></i> Admin Panel
