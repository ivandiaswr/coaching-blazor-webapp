                        <MudTextField @bind-Value="Subject"
                                      Label="Email Subject"
                                      Variant="Variant.Outlined"
                                      Required="true"
                                      @onkeyup="ValidateForm"
                                      @onchange="ValidateForm"
                                      @oninput="ValidateForm"
                                      Class="subject-field"
