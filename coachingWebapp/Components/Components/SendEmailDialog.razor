                            {
                                <div class="attachment-info mt-3">
                                    <MudText Typo="Typo.subtitle2" Class="mb-2">
                                        <MudIcon Icon="@Icons.Material.Filled.AttachFile" Class="mr-2" />
                                        Attached Files (@SelectedFiles.Count/3)
                                    </MudText>
