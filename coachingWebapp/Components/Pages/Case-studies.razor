            <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3">
                <div class="hero-badge">
                    <MudIcon Icon="Icons.Material.Filled.Star" Size="Size.Small" />
                    <MudText Typo="Typo.caption">Real Success Stories</MudText>
                </div>
                
