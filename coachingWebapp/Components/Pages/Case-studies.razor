                                        <div class="video-preview-content">
                                            <div class="case-study-play-btn">
                                                <MudIcon Icon="Icons.Material.Filled.PlayArrow" Size="Size.Large" />
                                            </div>
                                            <MudText Typo="Typo.body2" Class="play-instruction">
                                                Click to play @testimonial.Author's story
                                            </MudText>
                                        </div>
                                        
