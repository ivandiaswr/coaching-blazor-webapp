@page "/services/regulatory/training"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Expert food regulatory affairs training from Ítala Veloso. Learn about labelling compliance, nutrition and health claims regulations. Professional training for food industry professionals."
              Keywords="food regulatory training, food labelling training, nutrition claims training, health claims training, food safety training, regulatory compliance training, food law training"
              CanonicalUrl="https://italaveloso.com/services/regulatory/training"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<div class="life-coaching-container">
    <h1><span class="highlight">Food Regulatory Affairs</span> Training</h1>
    <p>Start living a purpose-driven life and unlock your potential with guidance tailored to you. Explore the areas
        below:</p>

    <div class="slider-container noslider">
        <div class="topics-grid">
            @foreach (var topic in Topics)
            {
                <div class="topic-card">
                    <div class="image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;">
                        <div class="image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="cta-section">
        <div class="cta-content">
            <h2>Ready to Transform Your Future?</h2>
            <p>Schedule a free consultation call to discuss your goals</p>
        </div>
        <a href="#contact" class="services-cta-button" @onclick:preventDefault>
            <span class="cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="cta-text">
                <span class="primary-text">Book Your Free Discovery Call</span>
                <span class="secondary-text">30 minutes, zero obligation</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

@code {
    private string pageTitle = "Food Regulatory Training | Ítala Veloso";
    private List<Topic> Topics { get; set; } = new List<Topic>();

    protected override void OnInitialized()
    {
        InitializeTopics();
        base.OnInitialized();
    }

    private void InitializeTopics()
    {
        Topics = new List<Topic>
{
new Topic {
Id = 1,
ImageUrl = "https://italaveloso.com/Images/services/regulatory-training/label-translation.jpg",
Title = "Labelling",
AltText = "Labelling"
},
new Topic {
Id = 2,
ImageUrl = "https://italaveloso.com/Images/services/regulatory-training/nutrition-health-claims.jpg",
Title = "Nutrition and Health Claims",
AltText = "Nutrition and Health Claims "
}
};
    }

    public ValueTask DisposeAsync()
    {
        try
        {
            Topics?.Clear();
            Topics = null;
        }
        catch (Exception)
        {
            // Ignore disposal errors
        }

        GC.SuppressFinalize(this);
        return ValueTask.CompletedTask;
    }

    private string GetServiceStructuredData()
    {
        return @"{
            ""@context"": ""https://schema.org"",
            ""@type"": ""Service"",
            ""name"": ""Food Regulatory Affairs Training"",
            ""description"": ""Professional food regulatory affairs training covering labelling compliance, nutrition and health claims regulations for food industry professionals."",
            ""provider"": {
                ""@type"": ""Person"",
                ""name"": ""Ítala Veloso"",
                ""jobTitle"": ""Food Regulatory Affairs Consultant""
            },
            ""serviceType"": ""Professional Training"",
            ""url"": ""https://italaveloso.com/services/regulatory/training"",
            ""offers"": {
                ""@type"": ""Offer"",
                ""availability"": ""https://schema.org/InStock"",
                ""price"": ""Varies"",
                ""priceCurrency"": ""GBP""
            },
            ""areaServed"": [
                {
                    ""@type"": ""Country"",
                    ""name"": ""United Kingdom""
                },
                {
                    ""@type"": ""Place"",
                    ""name"": ""European Union""
                }
            ]
        }";
    }
}

@implements IAsyncDisposable