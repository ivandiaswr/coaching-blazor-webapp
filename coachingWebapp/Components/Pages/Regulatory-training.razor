@page "/services/regulatory/training"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Expert food regulatory affairs training from Ítala Veloso. Learn about labelling compliance, nutrition and health claims regulations. Professional training for food industry professionals."
              Keywords="food regulatory training, food labelling training, nutrition claims training, health claims training, food safety training, regulatory compliance training, food law training"
              CanonicalUrl="https://italaveloso.com/services/regulatory/training"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<link href="~/css/services.css" rel="stylesheet" />

<div class="enhanced-service-container">
    <!-- Hero Section -->
    <div class="enhanced-hero-section">
        <div class="enhanced-hero-badge">
            <i class="fas fa-graduation-cap"></i>
            <span>Professional Training</span>
        </div>
        <h1><span class="highlight">Food Regulatory Affairs</span> Training</h1>
        <p class="enhanced-service-description">
            Empower your team with comprehensive food regulatory training. Build in-house expertise in labelling compliance, 
            nutrition claims, and regulatory best practices to ensure consistent compliance and reduce risks.
        </p>
    </div>

    <!-- Service Highlights -->
    <div class="enhanced-service-highlights">
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-book"></i>
            </div>
            <h4>Expert Knowledge</h4>
            <p>Learn from industry specialists with real-world regulatory experience</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-users-cog"></i>
            </div>
            <h4>Team Development</h4>
            <p>Build internal capabilities to manage regulatory compliance effectively</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-certificate"></i>
            </div>
            <h4>Practical Skills</h4>
            <p>Gain hands-on experience with current regulations and best practices</p>
        </div>
    </div>

    <!-- Enhanced Topics Grid -->
    <div class="enhanced-topics-container">
        <div class="enhanced-topics-grid noslider">
            @foreach (var topic in Topics)
            {
                <div class="enhanced-topic-card" tabindex="0">
                    <div class="enhanced-image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;" />
                        <div class="enhanced-image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                    <div class="enhanced-content-overlay">
                        <div class="enhanced-overlay-content">
                            <h4>@topic.Title</h4>
                            <p>@GetTopicDescription(topic.Id)</p>
                            <a href="#contact" class="enhanced-learn-more-btn">
                                <span>Learn More</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enhanced CTA Section -->
    <div class="enhanced-cta-section">
        <div class="enhanced-cta-content">
            <h2>Ready to Build Expertise?</h2>
            <p>Invest in your team's regulatory knowledge and ensure consistent compliance standards</p>
        </div>
        <a href="#contact" class="enhanced-services-cta-button" @onclick:preventDefault>
            <span class="enhanced-cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="enhanced-cta-text">
                <span class="enhanced-primary-text">Book Your Training Consultation</span>
                <span class="enhanced-secondary-text">30 minutes • Zero obligation • Customized training solutions</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

@code {
    private string pageTitle = "Food Regulatory Training | Ítala Veloso";
    private List<Topic> Topics { get; set; } = new List<Topic>();

    protected override void OnInitialized()
    {
        InitializeTopics();
        base.OnInitialized();
    }

    private void InitializeTopics()
    {
        Topics = new List<Topic>
{
new Topic {
Id = 1,
ImageUrl = "https://italaveloso.com/Images/services/regulatory-training/label-translation.jpg",
Title = "Labelling",
AltText = "Labelling"
},
new Topic {
Id = 2,
ImageUrl = "https://italaveloso.com/Images/services/regulatory-training/nutrition-health-claims.jpg",
Title = "Nutrition and Health Claims",
AltText = "Nutrition and Health Claims "
}
};
    }

    private string GetTopicDescription(int topicId)
    {
        return topicId switch
        {
            1 => "Comprehensive training on food labelling regulations, mandatory information requirements, and best practices for UK and EU markets to ensure accurate and compliant product labels.",
            2 => "Expert guidance on nutrition and health claims legislation, substantiation requirements, and practical application to help you make legally compliant and scientifically supported claims.",
            _ => "Specialized regulatory training designed to build your team's expertise in food compliance and safety standards."
        };
    }

    public ValueTask DisposeAsync()
    {
        try
        {
            Topics?.Clear();
            Topics = null;
        }
        catch (Exception)
        {
            // Ignore disposal errors
        }

        GC.SuppressFinalize(this);
        return ValueTask.CompletedTask;
    }

    private string GetServiceStructuredData()
    {
        return @"{
            ""@context"": ""https://schema.org"",
            ""@type"": ""Service"",
            ""name"": ""Food Regulatory Affairs Training"",
            ""description"": ""Professional food regulatory affairs training covering labelling compliance, nutrition and health claims regulations for food industry professionals."",
            ""provider"": {
                ""@type"": ""Person"",
                ""name"": ""Ítala Veloso"",
                ""jobTitle"": ""Food Regulatory Affairs Consultant""
            },
            ""serviceType"": ""Professional Training"",
            ""url"": ""https://italaveloso.com/services/regulatory/training"",
            ""offers"": {
                ""@type"": ""Offer"",
                ""availability"": ""https://schema.org/InStock"",
                ""price"": ""Varies"",
                ""priceCurrency"": ""GBP""
            },
            ""areaServed"": [
                {
                    ""@type"": ""Country"",
                    ""name"": ""United Kingdom""
                },
                {
                    ""@type"": ""Place"",
                    ""name"": ""European Union""
                }
            ]
        }";
    }
}

@implements IAsyncDisposable