@page "/services/coaching/career-coaching"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle"
    Description="Advance your career with expert career coaching from Ítala Veloso. Get CV reviews, interview preparation, goal setting, and work-life balance strategies. Book your free consultation today."
    Keywords="career coaching, CV review, interview preparation, career advancement, work life balance, professional development, career goals, job search, leadership development"
    CanonicalUrl="https://italaveloso.com/services/coaching/career-coaching"
    JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<link href="~/css/services.css" rel="stylesheet" />

<div class="enhanced-service-container">
    <!-- Hero Section -->
    <div class="enhanced-hero-section">
        <div class="enhanced-hero-badge">
            <i class="fas fa-rocket"></i>
            <span>Professional Growth</span>
        </div>
        <h1><span class="highlight">Career</span> Coaching</h1>
        <p class="enhanced-service-description">
            Accelerate your professional growth with strategic career coaching. From CV optimization to interview mastery, 
            build the skills and confidence needed to achieve your career aspirations and maintain work-life harmony.
        </p>
    </div>

    <!-- Service Highlights -->
    <div class="enhanced-service-highlights">
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <h4>Strategic Advancement</h4>
            <p>Create clear pathways for career progression and professional growth</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <h4>Professional Branding</h4>
            <p>Optimize your CV, LinkedIn, and personal brand for maximum impact</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-balance-scale"></i>
            </div>
            <h4>Work-Life Balance</h4>
            <p>Achieve sustainable success without sacrificing personal wellbeing</p>
        </div>
    </div>

    <!-- Enhanced Topics Grid -->
    <div class="enhanced-topics-container">
        <div class="enhanced-topics-grid" @ref="topicsGrid">
            @foreach (var topic in Topics)
            {
                <div class="enhanced-topic-card" tabindex="0">
                    <div class="enhanced-image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;" />
                        <div class="enhanced-image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                    <div class="enhanced-content-overlay">
                        <div class="enhanced-overlay-content">
                            <h4>@topic.Title</h4>
                            <p>@GetTopicDescription(topic.Id)</p>
                            <a href="#contact" class="enhanced-learn-more-btn">
                                <span>Learn More</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enhanced CTA Section -->
    <div class="enhanced-cta-section">
        <div class="enhanced-cta-content">
            <h2>Ready to Accelerate Your Career?</h2>
            <p>Get expert guidance to unlock new opportunities and achieve your professional goals</p>
        </div>
        <a href="#contact" class="enhanced-services-cta-button" @onclick:preventDefault>
            <span class="enhanced-cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="enhanced-cta-text">
                <span class="enhanced-primary-text">Book Your Free Strategy Session</span>
                <span class="enhanced-secondary-text">30 minutes • Zero obligation • Career-changing insights</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

@code {
    private string pageTitle = "Career Coaching | Ítala Veloso";
    private ElementReference topicsGrid;
    private List<Topic> Topics { get; set; } = new List<Topic>();

    protected override void OnInitialized()
    {
        InitializeTopics();
        base.OnInitialized();
    }

    private void InitializeTopics()
    {
        Topics = new List<Topic>
{
new Topic {
Id = 1,
ImageUrl = "https://italaveloso.com/Images/services/career-coaching/goals-progression.jpg",
Title = "Set Goals Progression",
AltText = "Goals Progression"
},
new Topic {
Id = 2,
ImageUrl = "https://italaveloso.com/Images/services/career-coaching/cv-review.jpg",
Title = "CV Reviews",
AltText = "CV Reviews"
},
new Topic {
Id = 3,
ImageUrl = "https://italaveloso.com/Images/services/career-coaching/interview-preparation.jpg",
Title = "Get Interview Preparations",
AltText = "Interview Preparations"
},
new Topic {
Id = 4,
ImageUrl = "https://italaveloso.com/Images/services/career-coaching/work-life-balance.jpg",
Title = "Achieve Work Life Balance",
AltText = "Work Life Balance"
},
new Topic {
Id = 5,
ImageUrl = "https://italaveloso.com/Images/services/career-coaching/feedback.jpg",
Title = "Constructive & Positive Feedback",
AltText = "Feedback"
}
};
    }

    private string GetTopicDescription(int topicId)
    {
        return topicId switch
        {
            1 => "Create strategic career milestones and actionable plans to accelerate your professional advancement.",
            2 => "Transform your CV into a powerful marketing tool that showcases your unique value and achievements.",
            3 => "Master interview techniques and build confidence to showcase your expertise and land your dream role.",
            4 => "Develop sustainable practices that support career success while maintaining personal wellbeing and fulfillment.",
            5 => "Learn to give and receive feedback effectively to foster professional growth and stronger workplace relationships.",
            _ => "Discover proven strategies to excel in this area of your professional development journey."
        };
    }

    public ValueTask DisposeAsync()
    {
        try
        {
            Topics?.Clear();
            Topics = null;
        }
        catch (Exception)
        {
            // Ignore disposal errors
        }

        GC.SuppressFinalize(this);
        return ValueTask.CompletedTask;
    }

    private string GetServiceStructuredData()
    {
        return @"{
""@context"": ""https://schema.org"",
""@type"": ""Service"",
""name"": ""Career Coaching"",
""description"": ""Professional career coaching services including CV reviews, interview preparation, goal setting, and
work-life balance strategies to advance your career."",
""provider"": {
""@type"": ""Person"",
""name"": ""Ítala Veloso"",
""jobTitle"": ""Career Coach""
},
""serviceType"": ""Career Coaching"",
""url"": ""https://italaveloso.com/services/coaching/career-coaching"",
""offers"": {
""@type"": ""Offer"",
""availability"": ""https://schema.org/InStock"",
""price"": ""Varies"",
""priceCurrency"": ""GBP""
},
""areaServed"": {
""@type"": ""Country"",
""name"": ""United Kingdom""
}
}";
    }
}

@implements IAsyncDisposable