@page "/resources/coming-soon"

@rendermode InteractiveServer

<PageTitle>@pageTitle</PageTitle>

<section class="coming-soon-container">
    <div class="coming-soon-background">
        <div class="floating-shapes">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
            <div class="shape shape-4"></div>
            <div class="shape shape-5"></div>
        </div>

        <div class="coming-soon-content">
            <div class="icon-container">
                <div class="book-icon">
                    📚
                </div>
                <div class="podcast-icon">
                    🎧
                </div>
            </div>

            <h1 class="main-title">
                Coming Soon
            </h1>

            <p class="subtitle">
                Exciting resources are on their way!
            </p>

            <div class="features-preview">
                <div class="feature-item">
                    <div class="feature-icon">📖</div>
                    <h3>Transformative Books</h3>
                    <p>Deep insights and practical strategies for your personal growth journey</p>
                </div>

                <div class="feature-item">
                    <div class="feature-icon">🎙️</div>
                    <h3>Inspiring Podcasts</h3>
                    <p>Weekly conversations with experts and success stories from real people</p>
                </div>
            </div>

            <div class="notification-signup">
                <p>Be the first to know when we launch!</p>
                <button class="notify-btn" @onclick="NavigateToNewsletter">
                    Subscribe to Newsletter
                </button>
            </div>

            <div class="animated-dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
</section>

@code {
    private string pageTitle = "Coming soon | Ítala Veloso";

    private async Task NavigateToNewsletter()
    {
        await JSRuntime.InvokeVoidAsync("scrollToElement", "newsletter-heading");
    }
}