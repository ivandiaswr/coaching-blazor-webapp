    private string GetTopicDescription(int topicId)
    {
        return topicId switch
        {
            1 => "Develop sustainable wellness practices that nourish your body, mind, and spirit for lasting vitality.",
            2 => "Cut through confusion and uncertainty to discover your true purpose and create a clear life vision.",
            3 => "Transform vague dreams into specific, actionable goals with proven strategies for achievement.",
            4 => "Identify and dissolve the mental, emotional, and behavioral patterns that keep you stuck.",
            5 => "Challenge and replace self-limiting thoughts with empowering beliefs that fuel your growth.",
            6 => "Strip away external expectations to reconnect with your genuine self and authentic desires.",
            7 => "Design a personalized roadmap that aligns your daily actions with your long-term vision.",
            8 => "Cultivate inner calm and emotional resilience through mindfulness and self-compassion practices.",
            _ => "Discover powerful strategies to transform this area of your life with personalized coaching support."
        };
    }

    public ValueTask DisposeAsync()
    {
        try
        {
            Topics?.Clear();
            Topics = null;
        }
        catch (Exception)
        {
            // Ignore disposal errors
        }

        GC.SuppressFinalize(this);
        return ValueTask.CompletedTask;
    }

