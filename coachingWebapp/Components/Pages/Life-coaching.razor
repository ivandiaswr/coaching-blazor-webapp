@page "/services/coaching/life-coaching"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Transform your life with expert life coaching from Ítala Veloso. Overcome limiting beliefs, heal from trauma, and create lasting positive change. Start your journey today."
              Keywords="life coaching, personal development, life transformation, overcome trauma, limiting beliefs, self-discovery, personal growth, life purpose, mindset coaching"
              CanonicalUrl="https://italaveloso.com/services/coaching/life-coaching"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<div class="life-coaching-container">
    <h1><span class="highlight">Life</span> Coaching</h1>
    <p>Start living a purpose-driven life and unlock your potential with guidance tailored to you. Explore the areas
        below:</p>

    <div class="slider-container">
        <div class="topics-grid" @ref="topicsGrid">
            @foreach (var topic in Topics)
            {
                <div class="topic-card">
                    <div class="image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;">
                        <div class="image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="cta-section">
        <div class="cta-content">
            <h2>Ready to Transform Your Future?</h2>
            <p>Schedule a free consultation call to discuss your goals</p>
        </div>
        <a href="#contact" class="services-cta-button">
            <span class="cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="cta-text">
                <span class="primary-text">Book Your Free Discovery Call</span>
                <span class="secondary-text">30 minutes, zero obligation</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

