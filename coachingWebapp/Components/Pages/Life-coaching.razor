@page "/services/coaching/life-coaching"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Transform your life with expert life coaching from Ítala Veloso. Overcome limiting beliefs, heal from trauma, and create lasting positive change. Start your journey today."
              Keywords="life coaching, personal development, life transformation, overcome trauma, limiting beliefs, self-discovery, personal growth, life purpose, mindset coaching"
              CanonicalUrl="https://italaveloso.com/services/coaching/life-coaching"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<link href="~/css/services.css" rel="stylesheet" />

<div class="enhanced-service-container">
    <!-- Hero Section -->
    <div class="enhanced-hero-section">
        <div class="enhanced-hero-badge">
            <i class="fas fa-sparkles"></i>
            <span>Most Popular Service</span>
        </div>
        <h1><span class="highlight">Life</span> Coaching</h1>
        <p class="enhanced-service-description">
            Transform your life with personalized coaching that helps you overcome limiting beliefs, heal from trauma, 
            and create lasting positive change. Start your journey toward authentic self-discovery and purposeful living.
        </p>
    </div>

    <!-- Service Highlights -->
    <div class="enhanced-service-highlights">
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-heart"></i>
            </div>
            <h4>Emotional Healing</h4>
            <p>Process trauma and limiting beliefs with compassionate support</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-compass"></i>
            </div>
            <h4>Clear Direction</h4>
            <p>Discover your authentic self and create a meaningful life path</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <h4>Lasting Results</h4>
            <p>Build sustainable habits and mindset shifts for long-term success</p>
        </div>
    </div>

    <!-- Enhanced Topics Grid -->
    <div class="enhanced-topics-container">
        <div class="enhanced-topics-grid" @ref="topicsGrid">
            @foreach (var topic in Topics)
            {
                <div class="enhanced-topic-card" tabindex="0">
                    <div class="enhanced-image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;" />
                        <div class="enhanced-image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                    <div class="enhanced-content-overlay">
                        <div class="enhanced-overlay-content">
                            <h4>@topic.Title</h4>
                            <p>@GetTopicDescription(topic.Id)</p>
                            <a href="#contact" class="enhanced-learn-more-btn">
                                <span>Learn More</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enhanced CTA Section -->
    <div class="enhanced-cta-section">
        <div class="enhanced-cta-content">
            <h2>Ready to Transform Your Life?</h2>
            <p>Take the first step toward lasting change with a complimentary discovery call</p>
        </div>
        <a href="#contact" class="enhanced-services-cta-button">
            <span class="enhanced-cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="enhanced-cta-text">
                <span class="enhanced-primary-text">Book Your Free Discovery Call</span>
                <span class="enhanced-secondary-text">30 minutes • Zero obligation • Life-changing insights</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

