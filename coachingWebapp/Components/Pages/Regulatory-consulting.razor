@page "/services/regulatory/consulting"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Expert food regulatory affairs consulting from Ítala Veloso. Get comprehensive formulation compliance, labelling services, HFSS compliance, import/export guidance for UK and EU markets."
              Keywords="food regulatory consulting, food compliance, labelling services, HFSS compliance, import export compliance, food law consulting, regulatory affairs consultant, UK EU food regulations"
              CanonicalUrl="https://italaveloso.com/services/regulatory/consulting"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<link href="~/css/services.css" rel="stylesheet" />

<div class="enhanced-service-container">
    <!-- Hero Section -->
    <div class="enhanced-hero-section">
        <div class="enhanced-hero-badge">
            <i class="fas fa-shield-alt"></i>
            <span>Expert Compliance</span>
        </div>
        <h1><span class="highlight">Food Regulatory Affairs</span> Consulting</h1>
        <p class="enhanced-service-description">
            Navigate complex food regulations with confidence. Get expert regulatory guidance to ensure your products 
            meet UK and EU compliance standards while maximizing market opportunities across the supply chain.
        </p>
    </div>

    <!-- Service Highlights -->
    <div class="enhanced-service-highlights">
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h4>Full Compliance</h4>
            <p>Ensure complete adherence to UK and EU food safety regulations</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-globe"></i>
            </div>
            <h4>Market Access</h4>
            <p>Unlock opportunities across UK and European markets with confidence</p>
        </div>
        <div class="enhanced-highlight-item">
            <div class="enhanced-highlight-icon">
                <i class="fas fa-users"></i>
            </div>
            <h4>Expert Guidance</h4>
            <p>Benefit from specialized knowledge across the entire food supply chain</p>
        </div>
    </div>

    <!-- Enhanced Topics Grid -->
    <div class="enhanced-topics-container">
        <div class="enhanced-topics-grid" @ref="topicsGrid">
            @foreach (var topic in Topics)
            {
                <div class="enhanced-topic-card" tabindex="0">
                    <div class="enhanced-image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;" />
                        <div class="enhanced-image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                    <div class="enhanced-content-overlay">
                        <div class="enhanced-overlay-content">
                            <h4>@topic.Title</h4>
                            <p>@GetTopicDescription(topic.Id)</p>
                            <a href="#contact" class="enhanced-learn-more-btn">
                                <span>Learn More</span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Enhanced CTA Section -->
    <div class="enhanced-cta-section">
        <div class="enhanced-cta-content">
            <h2>Ready to Ensure Compliance?</h2>
            <p>Get expert regulatory guidance to bring your products to market safely and successfully</p>
        </div>
        <a href="#contact" class="enhanced-services-cta-button" @onclick:preventDefault>
            <span class="enhanced-cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="enhanced-cta-text">
                <span class="enhanced-primary-text">Book Your Compliance Consultation</span>
                <span class="enhanced-secondary-text">30 minutes • Zero obligation • Expert regulatory insights</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

@code {
    private string pageTitle = "Food Regulatory Consulting | Ítala Veloso";
    private ElementReference topicsGrid;
    private List<Topic> Topics { get; set; } = new List<Topic>();

    protected override void OnInitialized()
    {
        // Initialize topics data only when needed
        InitializeTopics();
        base.OnInitialized();
    }

    private void InitializeTopics()
    {
        Topics = new List<Topic>
{
new Topic {
Id = 1,
ImageUrl = "https://italaveloso.com/Images/services/regulatory-consulting/formulation-check.jpg",
