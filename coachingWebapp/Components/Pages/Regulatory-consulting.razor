Title = "Food Regulatory Label Translation Services (EN-PT, PT-EN, BR-EN)",
AltText = "Translating labels from English to Portuguese"
}
};
    }

    private string GetTopicDescription(int topicId)
    {
        return topicId switch
        {
            1 => "Thorough analysis of product formulations to ensure complete compliance with UK and EU food safety regulations.",
            2 => "Expert pack copy creation and review services covering all regional requirements for accurate food labeling.",
            3 => "Professional artwork and label reviews to guarantee regulatory compliance before market launch.",
            4 => "Clear interpretation of complex food regulations with practical implementation guidance for your business.",
            5 => "Navigate HFSS (High in Fat, Salt, Sugar) regulations with expert compliance strategies and solutions.",
            6 => "Comprehensive support for international food trade ensuring smooth import/export regulatory compliance.",
            7 => "Audit marketing materials for regulatory compliance across print and digital channels to avoid costly mistakes.",
            8 => "Professional translation services for food regulatory labels between English, Portuguese, and Brazilian Portuguese.",
            _ => "Expert regulatory guidance tailored to your specific food business compliance needs."
        };
    }

    public ValueTask DisposeAsync()
    {
        try
        {
            // Clear the topics list to help with garbage collection
            Topics?.Clear();
            Topics = null;
        }
        catch (Exception)
        {
            // Ignore disposal errors
        }

        GC.SuppressFinalize(this);
        return ValueTask.CompletedTask;
    }

