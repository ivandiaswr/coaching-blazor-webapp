@page "/services/regulatory/consulting"

@rendermode InteractiveServer

<SeoComponent Title="@pageTitle" 
              Description="Expert food regulatory affairs consulting from Ítala Veloso. Get comprehensive formulation compliance, labelling services, HFSS compliance, import/export guidance for UK and EU markets."
              Keywords="food regulatory consulting, food compliance, labelling services, HFSS compliance, import export compliance, food law consulting, regulatory affairs consultant, UK EU food regulations"
              CanonicalUrl="https://italaveloso.com/services/regulatory/consulting"
              JsonLdStructuredData="@GetServiceStructuredData()" />

<PageTitle>@pageTitle</PageTitle>

<div class="life-coaching-container">
    <h1><span class="highlight">Food Regulatory Affairs</span> Consulting</h1>
    <p>Get food regulatory advice & guidance to food businesses throughout the whole supply chain. Assisting you to
        place legally compliant and commercially viable products (both online and in stores) onto the UK and the
        European markets. A range from small to multinational food businesses and include manufacturers, wholesalers,
        retailers and distributors, as clients. Explore the areas below:</p>

    <div class="slider-container">
        <div class="topics-grid" @ref="topicsGrid">
            @foreach (var topic in Topics)
            {
                <div class="topic-card">
                    <div class="image-wrapper">
                        <img src="@topic.ImageUrl" alt="@topic.AltText" loading="lazy" decoding="async"
                            onload="this.style.opacity=1" style="opacity:0;transition:opacity 0.3s;">
                        <div class="image-title">
                            <h3>@topic.Title</h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="cta-section">
        <div class="cta-content">
            <h2>Ready to Transform Your Future?</h2>
            <p>Schedule a free consultation call to discuss your goals</p>
        </div>
        <a href="#contact" class="services-cta-button" @onclick:preventDefault>
            <span class="cta-icon"><i class="fas fa-calendar-check"></i></span>
            <span class="cta-text">
                <span class="primary-text">Book Your Free Discovery Call</span>
                <span class="secondary-text">30 minutes, zero obligation</span>
            </span>
            <i class="fas fa-arrow-right"></i>
        </a>
    </div>
</div>

